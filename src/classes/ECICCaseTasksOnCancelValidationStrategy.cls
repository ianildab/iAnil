public class ECICCaseTasksOnCancelValidationStrategy extends ECICCaseProcessingStrategyAbstract {
	
	public override boolean OnBeforeUpdate(Map<ID, sObject> oldValuesMap, Map<ID, sObject> newValuesMap) {
		Map<ID, Case> oldCasesMap = (Map<ID, Case>)oldValuesMap;
		Map<ID, Case> newCasesMap = (Map<ID, Case>)newValuesMap;
		
    	boolean result = true;
    	
    	Set<ID> cancelledCaseIds = filterNewCasesByStatusChangedTo(ECICCommonConstants.STATUS_CANCELLED, oldCasesMap.values(), newCasesMap);

        if (! cancelledCaseIds.isEmpty()) {
            Map<ID, Decimal> numberOfUncompletedTasksByCaseIds = ECICCaseTriggerTaskCache.getNumberOfIncompleteManualAndModifiedAutogeneratedTasksByCaseIdMap(); 
            result = checkNumberOfIncompleteTasks(numberOfUncompletedTasksByCaseIds, newCasesMap);
        }
        
        return result;
    }
}