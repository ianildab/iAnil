@isTest
public class ECICTaskTestHelper 
{
    public static List<Task> findTasks (Case dummyCase)
    {
		List<Task> taskList = ECICTaskDao.findNotModifiedAutogeneratedTasksOfCases(new Set<Id>{dummyCase.id});
				   taskList.sort();
    	return     taskList;
    }
	
	public static void assertEquals (List<Task> firstTaskList, List<Task> secondTaskList)
	{
		System.assertEquals (firstTaskList.size(), secondTaskList.size());
		firstTaskList.sort();
		secondTaskList.sort();
		
		for (Integer i=1; i <= firstTaskList.size(); i++)
		{
			System.assertEquals (firstTaskList[i-1], secondTaskList[i-1]);
		}
	}
}